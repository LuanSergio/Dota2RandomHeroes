$base-font-size = 1em;

*,
*::before,
*::after {
  text-rendering: optimizeLegibility;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
  box-sizing: border-box;

  -moz-user-select: -moz-none;
  -khtml-user-select: none;
  -webkit-user-select: none;
  -ms-user-select: none;
  user-select: none;
}

html {
  font-size: $base-font-size;
}

html,
body {
  width: 100%;
  margin: 0;
  padding-left: 0;
  padding-right: 0;
  padding-bottom: 0;
  font-family: $fontfamily.main;
  background-size: cover;
  //firefox custom scrollbar
  scrollbar-color: $theme.side $theme.main;
  scrollbar-width: auto;
  // ie and edge custom scroll bar
  scrollbar-face-color: $theme.main;
  scrollbar-track-color: $theme.side;
  scrollbar-arrow-color: $theme.main;
  scrollbar-shadow-color: $theme.main; //border
}

body {
  padding-top: rem(20);
  background-color: #0d111c;
  background-image: url("../img/body-background.webp");
  background-repeat: no-repeat;
}

//chrome custom scroll bar
body::-webkit-scrollbar {
  width: rem(15);
  height: rem(0);
}
body::-webkit-scrollbar-track {
  background-color: $theme.main;
  border-radius: rem(0);
}
body::-webkit-scrollbar-thumb {
  background-color:  $theme.side;
  border-radius: rem(0);
}
body::-webkit-scrollbar-corner {
  background-color: $theme.main;
}

button,
input,
optgroup,
select,
textarea {
  font-size: 90%;
}

button:focus,
input:focus,
optgroup:focus,
select:focus,
textarea:focus {
  outline: none;
  border: rem(2) solid $colors.astral !important;
}

::placeholder {
  color: $theme.secondary;
  opacity: 1;
}

:-ms-input-placeholder {
  color: $theme.secondary;
}

::-ms-input-placeholder {
  color: $theme.secondary;
}

input::-webkit-calendar-picker-indicator {
  opacity: 100;
  cursor: pointer;
}

input::-webkit-calendar-picker-indicator:hover {
  opacity: 100;
  background-color: $theme.hoverMain;
}


.noscript {
  color: $theme.secondary;
  font-size: rem(26);
  font-weight: bold;
  text-align: center;
  margin-top: rem(40);
  margin-bottom: rem(40);
}

.noscript__link {
  color: $theme.light;
  transition: color 0.2s;
}

.noscript__link:hover {
  color: $theme.hoverSecondary;
}

@media only screen and (min-width: $breakpoints.fullHD) {
  body {
    font-size: $base-font-size*1.2;
  }
}

