.c-settings__tag-icon::before{
  content: '\e903';
  
  position: absolute;
  line-height: 0;
  left: 0;
}

@media only screen and (min-width: $media.lg) {
  .o-button.-add, .o-button.-remove, .o-button.-clear{
    width: em(120);
    height: em(35);
    font-size: em(14);
  }

  .c-settings__input {
    height: em(35);
    padding-left: em(8);
  }
  .o-button::before {
    letter-spacing: em(10);
    font-size: em(12);
  }
}

@media only screen and (min-width: $media.sm) {
  .c-settings__input-group {
    margin-bottom: 7px;
  }
}

@media only screen and (max-width: $media.xs) {
  .c-settings__tag-item {
    font-size: 17px;
    padding: 10px 15px;
  }

  .c-settings__tag-icon {
    width: 22px;
    font-size: 25px;
    height: 22px;
    margin-right: 5px;
  }

  .c-settings__tag-icon::before {
    font-size: 22px;
  }

  .c-settings__input-group, .c-settings__button-group {
   display: block;
  }
  .c-settings__input {
    margin-bottom: 7px;
  }

  .c-settings__input {
    display: block;
  }

  .c-settings__input, .c-settings__input.-quantity, .o-button.-clear {
    width: calc(100% - 4px);
    max-width: calc(100% - 4px);
    margin-right: auto;
    margin-left: auto; 
  }

  .o-button.-add, .o-button.-remove, .o-button.-clear  {
    height: 45px;
    line-height: 0;
  }

  .o-button.-add, .o-button.-remove {
    width: calc(50% - 4px);
    vertical-align: top;
    margin-bottom 7px;
  }
}
