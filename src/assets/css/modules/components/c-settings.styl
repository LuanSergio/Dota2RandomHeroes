.c-settings {
  margin-bottom 40px;
}

::placeholder {
  color: $theme.secondary;
  opacity: 1;
}

:-ms-input-placeholder {
  color: $theme.secondary;
}

::-ms-input-placeholder {
  color: $theme.secondary;
}

input::-webkit-calendar-picker-indicator {
  opacity: 100;
}

input::-webkit-calendar-picker-indicator:hover {
  opacity: 100;
  background-color: $theme.hoverMain;
}


input[type=number]::-webkit-inner-spin-button, 
input[type=number]::-webkit-outer-spin-button { 
  background-color: blue;
  color: yellow;
}

.c-settings__input {
  height: 30px;
  background-color: $theme.main;
  color: $theme.secondary;
  border: 1px solid $theme.side;
  vertical-align: top;
  border-radius: 3px;
  padding-left: 8px;
  text-transform: capitalize;
  opacity: 0.90;
  -o-transition: .3s;
  -ms-transition: .3s;
  -moz-transition: .3s;
  -webkit-transition: .3s;
  transition: .3s;
  
  -webkit-box-shadow: 0px 3px 12px 0px rgba(0,0,0,0.75);
  -moz-box-shadow: 0px 3px 12px 0px rgba(0,0,0,0.75);
  box-shadow: 0px 3px 12px 0px rgba(0,0,0,0.75);
}

.c-settings__input:hover,
.c-settings__input:focus {
  opacity: 1;
  color: $theme.hoverSecondary;
  border: 1px solid $theme.hoverSide;
}

.c-button.-add, .c-button.-remove, .c-button.-clear{
  display: inline-block;
  width: 120px;
  height: 30px;
  font-size: 12px;
}

.c-button::before {
  letter-spacing: 10px;
  font-family: 'icomoon' !important;
  font-size: 10px;
}

.c-button.-add::before {
  content: '\e905';
}

.c-button.-remove::before {
  content: '\e904';
}

.c-button.-clear::before {
  content: '\e900';
}
