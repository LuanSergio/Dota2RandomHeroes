.c-settings {
  margin-bottom 40px;
  max-width: 1160px;
  margin-right: auto;
  margin-left: auto;
}

.c-settings__input-group, .c-settings__button-group {
  display: inline-block;
  vertical-align: top;
}

.c-settings__input {
  background-color: $theme.main;
  border: 1px solid $theme.side;
  border-radius: 3px;
  color: $theme.secondary;
  height: 35px;
  padding-left: 8px;
  opacity: 0.90;
  text-transform: capitalize;
  vertical-align: top;

  transition: .3s;
  -o-transition: .3s;
  -ms-transition: .3s;
  -moz-transition: .3s;
  -webkit-transition: .3s;

  -webkit-box-shadow: 0px 3px 12px 0px rgba(0,0,0,0.75);
  -moz-box-shadow: 0px 3px 12px 0px rgba(0,0,0,0.75);
  box-shadow: 0px 3px 12px 0px rgba(0,0,0,0.75);
}

.c-settings__input.-quantity {
  max-width: 60px;
}

.c-settings__input:hover,
.c-settings__input:focus,
.c-settings__tag-item:hover {
  opacity: 1;
  color: $theme.hoverSecondary;
  border: 1px solid $theme.hoverSide;
}

.o-button.-add, .o-button.-remove, .o-button.-clear{
  display: inline-block;
  width: 120px;
  height: 35px;
  font-size: 14px;
  cursor: pointer;
}

.o-button::before {
  letter-spacing: 10px;
  font-family: 'icomoon' !important;
  font-size: 12px;
}

.o-button.-add::before {
  content: '\e905';
}

.o-button.-remove::before {
  content: '\e904';
}

.o-button.-clear::before {
  content: '\e900';
}

.c-settings__tag {
  padding: 0;
  margin-top: 5px;
  margin-bottom: 30px;
  margin-right: auto;
  margin-left: auto;
  max-width: 790px;
}

.c-settings__tag-item {
  font-size: 16px;
  border-radius: 3px;
  display: inline-block;
  padding: 5px 10px;
  line-height: 0px;
  text-align: center;
  margin-right: 5px;
  margin-bottom: 7px;
  background-color: $theme.main;
}

.c-settings__tag-item:hover {
  background-color: $theme.hoverMain;
}

.c-settings__tag-item.-add {
  color: $theme.secondary;
  border: 1px solid $theme.side;
}

.c-settings__tag-item.-remove {
  color: $theme.excluded;
  border: 1px solid $theme.excluded;
}

.c-settings__tag-text {
  display: inline-block;
  vertical-align: middle;
  line-height: normal;
  transform: translateY(0.5px);
}

.c-settings__tag-icon {
  background-color: rgba(0, 0, 0, 0);
  border: 0;
  color: inherit;
  display: inline-block;
  vertical-align: middle;
  width: 18px;
  height: 18px;
  padding: 0;
  position: relative;
  cursor: pointer;
  opacity: 0.9;
}

.c-settings__tag-icon:hover {
  opacity: 1;
}

.c-settings__tag-icon::before{
  content: '\e903';
  font-family: 'icomoon' !important;
  position: absolute;
  line-height: 0;
  font-size: 15px;
  left: 0;
}

@media only screen and (max-width: $media.xs) {
  .c-settings__tag-item {
    font-size: 17px;
    padding: 10px 15px;
  }

  .c-settings__tag-icon {
    width: 22px;
    font-size: 25px;
    height: 22px;
    margin-right: 5px;
  }

  .c-settings__tag-icon::before {
    font-size: 22px;
  }

  .c-settings__input-group, .c-settings__button-group {
   display: block;
  }
  .c-settings__input {
    margin-bottom: 7px;
  }

  .c-settings__input {
    display: block;
  }

  .c-settings__input, .c-settings__input.-quantity, .o-button.-clear {
    width: calc(100% - 4px);
    max-width: calc(100% - 4px);
    margin-right: auto;
    margin-left: auto; 
  }

  .o-button.-add, .o-button.-remove, .o-button.-clear  {
    height: 45px;
    line-height: 0;
  }

  .o-button.-add, .o-button.-remove {
    width: calc(50% - 4px);
    vertical-align: top;
    margin-bottom 7px;
  }
}
