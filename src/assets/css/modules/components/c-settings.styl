::placeholder {
  color: $theme.text;
  opacity: 1;
}

:-ms-input-placeholder {
  color: $theme.text;
}

::-ms-input-placeholder {
  color: $theme.text;
}

input::-webkit-calendar-picker-indicator {
  opacity: 100;
}

input::-webkit-calendar-picker-indicator:hover {
  opacity: 100;
  background-color: $theme.hBackground;
}


.c-settings__input {
  height: 27px;
  background-color: $theme.background;
  color: $theme.text;
  border: 1px solid $theme.border;
  border-radius: 3px;
  padding-left: 8px;
  text-transform: capitalize;

  -o-transition: .3s;
  -ms-transition: .3s;
  -moz-transition: .3s;
  -webkit-transition: .3s;
  transition: .3s;
  
  -webkit-box-shadow: 0px 3px 12px 0px rgba(0,0,0,0.75);
  -moz-box-shadow: 0px 3px 12px 0px rgba(0,0,0,0.75);
  box-shadow: 0px 3px 12px 0px rgba(0,0,0,0.75);
}

.c-button.-add, .c-button.-remove{
  display: inline-block;
  width: 120px;
  height: 27px;
  line-height: 27px;
  font-size: 12px;
}

.c-button.-add::before {
  content: '\e904';
  font-family: 'icomoon' !important;
  letter-spacing: 10px;
  font-size: 10px;
}

.c-button.-remove::before {
  content: '\e903';
  letter-spacing: 10px;
  font-family: 'icomoon' !important;
  font-size: 10px;
}
