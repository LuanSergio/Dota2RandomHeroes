.c-settings {
  margin-bottom em(40);
  margin-top: em(10);
  max-width: em(1160);
  margin-right: auto;
  margin-left: auto;
  animation-name: popIn;
  animation-duration: 1s;
}

.c-settings__input-group, .c-settings__button-group {
  display: inline-block;
  vertical-align: top;
}

.c-settings__input {
  background-color: $theme.main;
  border: 1px solid $theme.side;
  border-radius: 3px;
  color: $theme.secondary;
  height: rem(35);
  padding-left: rem(8);
  opacity: 0.90;
  text-transform: capitalize;
  vertical-align: top;

  transition: .3s;
  -o-transition: .3s;
  -ms-transition: .3s;
  -moz-transition: .3s;
  -webkit-transition: .3s;

  -webkit-box-shadow: 0px 3px 12px 0px rgba(0,0,0,0.75);
  -moz-box-shadow: 0px 3px 12px 0px rgba(0,0,0,0.75);
  box-shadow: 0px 3px 12px 0px rgba(0,0,0,0.75);
}

.c-settings__input.-quantity {
  max-width: em(60);
}

.c-settings__input:hover,
.c-settings__input:focus,
.c-settings__tag-item:hover {
  opacity: 1;
  color: $theme.hoverSecondary;
  border: 1px solid $theme.hoverSide;
}

.o-button.-add, .o-button.-remove, .o-button.-clear{
  display: inline-block;
  width: rem(120);
  height: rem(35);
  font-size: rem(14);
  cursor: pointer;
}

.o-button::before {
  letter-spacing: rem(10);
  font-family: $fontfamily.icon !important;
  font-size: rem(12);
}

.o-button.-add::before {
  content: '\e905';
}

.o-button.-remove::before {
  content: '\e904';
}

.o-button.-clear::before {
  content: '\e900';
}

.c-settings__tag-container {
  padding: 0;
  margin-top: em(5);
  margin-bottom: em(10);
  margin-right: auto;
  margin-left: auto;
  max-width: 800px;
}

.c-settings__tag-item {
  font-size: em(16);
  border-radius: 3px;
  display: inline-block;
  padding: em(6) em(10);
  text-align: center;
  margin-right: em(5);
  margin-bottom: em(7);
  background-color: $theme.main;
  cursor: pointer;
}

.c-settings__tag-item:hover {
  background-color: $theme.hoverMain;
}

.c-settings__tag-item.-add {
  color: $theme.secondary;
  border: 1px solid $theme.side;
}

.c-settings__tag-item.-remove {
  color: $theme.excluded;
  border: 1px solid $theme.excluded;
}

.c-settings__tag-text {
  display: inline-block;
  vertical-align: middle;
  line-height: normal;
  transform: translateY(0.5px);
}

.c-settings__tag-text::before {
  content: '\e903';
  font-family: $fontfamily.icon !important;
  display: inline-block;
  font-size: em(16);
  margin-right: 5px;
  transform: translateY(1px);
  width: em(18);
  height: em(18);
  opacity: 0.9;

}

