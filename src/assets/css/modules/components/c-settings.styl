.c-settings {
  margin-bottom 40px;
}

.c-settings__input {
  background-color: $theme.main;
  border: 1px solid $theme.side;
  border-radius: 3px;
  color: $theme.secondary;
  height: 35px;
  padding-left: 8px;
  opacity: 0.90;
  text-transform: capitalize;
  vertical-align: top;

  transition: .3s;
  -o-transition: .3s;
  -ms-transition: .3s;
  -moz-transition: .3s;
  -webkit-transition: .3s;

  -webkit-box-shadow: 0px 3px 12px 0px rgba(0,0,0,0.75);
  -moz-box-shadow: 0px 3px 12px 0px rgba(0,0,0,0.75);
  box-shadow: 0px 3px 12px 0px rgba(0,0,0,0.75);
}

.c-settings__input.-quantity {
  max-width: 50px;
}

.c-settings__input:hover,
.c-settings__input:focus,
.c-settings__tag-item:hover {
  opacity: 1;
  color: $theme.hoverSecondary;
  border: 1px solid $theme.hoverSide;
}

.c-button.-add, .c-button.-remove, .c-button.-clear{
  display: inline-block;
  width: 120px;
  height: 35px;
  font-size: 14px;
  cursor: pointer;
}

.c-button::before {
  letter-spacing: 10px;
  font-family: 'icomoon' !important;
  font-size: 12px;
}

.c-button.-add::before {
  content: '\e905';
}

.c-button.-remove::before {
  content: '\e904';
}

.c-button.-clear::before {
  content: '\e900';
}

.c-settings__tag {
  padding: 0;
  margin-top: 0;
  margin-bottom: 30px;
}

.c-settings__tag-item {
  color: $theme.secondary;
  font-size: 16px;
  background-color: $theme.main;
  border: 1px solid $theme.side;
  border-radius: 3px;
  display: inline-block;
  padding: 5px 10px;
  line-height: 0px;
  text-align: center;
  margin-right: 5px;
}

.c-settings__tag-text {
  display: inline-block;
  vertical-align: middle;
  line-height: normal;
  transform: translateY(0.5px);
}

.c-settings__tag-icon {
  background-color: rgba(0, 0, 0, 0);
  border: 0;
  color: inherit;
  display: inline-block;
  vertical-align: middle;
  width: 16px;
  height: 16px;
  padding: 0;
  margin-right: 3px;
  position: relative;
  cursor: pointer;
}

.c-settings__tag-icon::before{
  content: '\e903';
  font-family: 'icomoon' !important;
  position: absolute;
  line-height: 0;
  font-size: 16px;
  left: 0;
}
