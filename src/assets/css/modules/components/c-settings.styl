.c-settings {
  margin-bottom 40px;
}

.c-settings__input {
  background-color: $theme.main;
  border: 1px solid $theme.side;
  border-radius: 3px;
  color: $theme.secondary;
  height: 30px;
  padding-left: 8px;
  opacity: 0.90;
  text-transform: capitalize;
  vertical-align: top;

  transition: .3s;
  -o-transition: .3s;
  -ms-transition: .3s;
  -moz-transition: .3s;
  -webkit-transition: .3s;

  -webkit-box-shadow: 0px 3px 12px 0px rgba(0,0,0,0.75);
  -moz-box-shadow: 0px 3px 12px 0px rgba(0,0,0,0.75);
  box-shadow: 0px 3px 12px 0px rgba(0,0,0,0.75);
}

.c-settings__input:hover,
.c-settings__input:focus,
.c-settings__tag-item {
  opacity: 1;
  color: $theme.hoverSecondary;
  border: 1px solid $theme.hoverSide;
}

.c-button.-add, .c-button.-remove, .c-button.-clear{
  display: inline-block;
  width: 120px;
  height: 30px;
  font-size: 12px;
}

.c-button::before {
  letter-spacing: 10px;
  font-family: 'icomoon' !important;
  font-size: 10px;
}

.c-button.-add::before {
  content: '\e905';
}

.c-button.-remove::before {
  content: '\e904';
}

.c-button.-clear::before {
  content: '\e900';
}

.c-settings__tag-item {
  display: inline-block;
  font-size: 14px;
  color: $theme.secondary;
  background-color: $theme.main;
  border: 1px solid $theme.side;
  border-radius: 3px;
  padding: 5px;
  position: relative;
}

.c-settings__tag-icon {
  display: inline-block;
  width: 13px;
  height: 14px;
  position: relative;
  left: -10px
}

.c-settings__tag-icon::before{
  content: '\e903';
  font-family: 'icomoon' !important;
  font-size: 13px;
  position: absolute;
}