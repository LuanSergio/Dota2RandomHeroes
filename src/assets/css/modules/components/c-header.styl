.c-header {
  position: absolute;
  max-width: 1160px;
  left: 50%;
  -webkit-transform: translateX(-50%);
  transform: translateX(-50%);
  width: 100%;
}

.c-header__logo {
  vertical-align: top;
  margin-top: 0;
  margin-bottom: 20px;
}

.c-header__logo::after {
  content: '';
  display: inline-block;
  position: absolute;
  background-repeat: no-repeat;
  background-size: contain;
  height: 800px;
  width: 800px;
  right: -90px;
  opacity: 0.70;
  background-image: url("../img/rubick_header.png");
}

.c-header__logo-img {
  max-width: 120px;
}

@media only screen and (max-width: $media.xs) {
  .c-header {
    position: relative;
    text-align: center;
  }

  .c-header__logo::after {
    display: none;
  }

  .c-header__logo-img {
    max-width: 230px;
  }

}