.c-footer {
  background-color: $theme.tertiary;
  padding-top: em(20);
  padding-bottom: em(20);
  border-top: 2px solid $theme.secondary;
  margin-top: rem(40);
}

.c-footer__container {
  max-width: rem(1160);
  margin-right: auto;
  margin-left: auto;
  text-align: center;
  padding-left: em(40);
  padding-right: em(40);
}

.c-footer__disclaimer {
  text-align: center;
  margin-bottom: 0;
}

.c-footer__disclaimer {
  color: $theme.secondary;
  font-size: em(12);
}

.c-footer__socials {
  font-size: 0;
  text-decoration: none;
}

.c-footer__socials::before {
  content: '\e909';
  font-family: $fontfamily.icon !important;
  color: $theme.secondary;
  font-size: rem(45);
  display: inline-block;
  margin-right: auto;
  margin-left: auto;
}

.c-footer__socials:hover::before {
  color: $theme.hoverSecondary;
}

@media only screen and (min-width: $media.lg) {
  .c-footer__socials::before {
    font-size: rem(65);
  }
}