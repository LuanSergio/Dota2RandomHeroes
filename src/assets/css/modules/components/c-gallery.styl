.c-gallery {
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  justify-content: center;
  padding-bottom: 40px;
  align-items: flex-start;
}

.c-gallery__group-container {
  display: flex;
  flex-wrap: wrap;
  flex-direction: column;
  flex: 0 1 calc(32.33% - 10px);
  justify-items: space-between;
}

.c-gallery__group-title {
  position: relative;
  margin-left: auto;
  margin-right: auto;
  margin-top: 10px;
  margin-bottom: 20px;
  color: $theme.light;
}

.c-gallery__group-title::before {
  content: '';
  display: inline-block;
  position: absolute;
  background-repeat: no-repeat;
  background-size: contain;
  transform: translateY(50%);
  bottom: 50%;
  left: -60px;
  height: 40px;
  width: 40px;
}

.c-gallery__group-title.-strength::before {
  background-image: url("../img/icons/strength2.png");
}

.c-gallery__group-title.-agility::before {
  background-image: url("../img/icons/agility2.png");
}

.c-gallery__group-title.-intelligence::before {
  background-image: url("../img/icons/intelligence2.png");
}

.c-gallery__heroes {
  display: flex;
  flex-wrap: wrap;
  align-content: flex-start;
  margin-bottom: 7px;
  margin-right: 5px;
  margin-left: 5px;
  padding-left: 2px;
  padding-right: 2px;
  min-height: 320px;
}

.c-gallery__hero {
  position: relative;
  width: 87.5px;
  height: 49.08px;
  margin-bottom: 4px;
  margin-right: 2px;
  margin-left: 2px;
  transition-duration: 1s;
  color: #ffffff;
}

.c-gallery__hero.-selected::after {
  content: '\e901';
  font-family: 'icomoon' !important;
  font-size: 20px;
  color: $theme.checked;
  text-shadow: 2px 2px 2px #000000;
  -webkit-text-stroke-width: 1px;
  -webkit-text-stroke-color: #000000;
  position: absolute;
  bottom: 0;
  right: 2px;
  width: 23px;
  height: 23px;
  transition: 0.15s;
  transition-timing-function: linear;
}

.c-gallery__hero.-excluded::after {
  content: '\e902';
  font-family: 'icomoon' !important;
  font-size: 18px;
  color:  $theme.excluded;
  text-shadow: 2px 2px 2px #000000;
  -webkit-text-stroke-width: 1px;
  -webkit-text-stroke-color: #000000;
  position: absolute;
  bottom: 0;
  right: 2px;
  width: 23px;
  height: 23px;
  transition: 0.15s;
  transition-timing-function: linear;
}

.c-gallery__hero.-excluded, .c-gallery__hero.-notSelected {
  .c-gallery__hero-img {
    opacity: 0.35;
  }

  .c-gallery__hero-img:hover {
    opacity: 1;
  }
}

.c-gallery__hero-img {
  position: relative;
  display: flex;
  width: 87.5px;
  height: 49.08px;
  transition 0.05s opacity linear;
}

.c-gallery__hero-img:hover {
  opacity: 0.6;
}

.c-gallery_slide-button {
  display: none;
}

@media only screen and (max-width: $media.xs) {
  .c-gallery {
    display: block;
    margin-left: auto;
    margin-right: auto;
  }

  .c-gallery__hero {
    width: 100.63px;
    height: 56.44px;
  }

  .c-gallery__hero-img {
    width: 100.63px;
    height: 56.44px;
  }

  .c-gallery__group-container {
    position: relative;
    margin-left: auto;
    margin-right: auto;
  }

  .c-gallery__heroes {
    justify-content: center;
  }

  .c-gallery__group-title {
    margin-bottom: 32px;
  }

  .c-gallery__group-title::before {
    left: -60px;
    height: 50px;
    width: 50px;
  }

  .c-gallery_slide-button-container {
    position: sticky;
    display: flex;
    top: 44.7%;
    z-index: 100;
    align-self: center;
  }
  
  .c-gallery_slide-button {
    display: block;
    font-size: 0;
    background-color: rgba(0, 0, 0, 0.6);
    padding: 5px;
    border: none;
    position: absolute;
  }

  .c-gallery__hero-img {
    transition: none;
  }

  .c-gallery_slide-button::before {
    font-family: 'icomoon' !important;
    display: block;
    font-size: 40px;
    color: $theme.light;
  }

  .c-gallery_slide-button.-previus {
    left: 0px;
  }

  .c-gallery_slide-button.-previus::before {
    content: '\e906';
  }

  .c-gallery_slide-button.-next::before {
    content: '\e907';
  }

  .c-gallery_slide-button.-next {
    right: 0px;
  }
}
