.c-gallery {
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  justify-content: center;
  padding-bottom: em(40);
  align-items: flex-start;
}

.c-gallery__group-container {
  display: flex;
  flex-wrap: wrap;
  flex-direction: column;
  flex: 0 1 calc(32.33% - 10px);
  justify-items: space-between;
  animation-name: popIn;
  animation-duration: 1s;
}

.c-gallery__group-title {
  position: relative;
  margin-left: auto;
  margin-right: auto;
  margin-top: em(10);
  margin-bottom: em(20);
  color: $theme.light;
}

.c-gallery__group-title::before {
  content: '';
  display: inline-block;
  position: absolute;
  background-repeat: no-repeat;
  background-size: contain;
  transform: translateY(50%);
  bottom: 50%;
  left: rem(-60);
  height: rem(40);
  width: rem(40);
}

.c-gallery__group-title.-strength::before {
  background-image: url("../img/attributes/strength.webp");
}

.c-gallery__group-title.-agility::before {
  background-image: url("../img/attributes/agility.webp");
}

.c-gallery__group-title.-intelligence::before {
  background-image: url("../img/attributes/intelligence.webp");
}

.c-gallery__heroes {
  display: flex;
  flex-wrap: wrap;
  align-content: flex-start;
  margin-bottom: em(7);
  margin-right: em(5);
  margin-left: em(5);
  padding-left: em(2);
  padding-right: em(2);
  min-height: 320px;
}

.c-gallery__hero {
  position: relative;
  width: em(87.5);
  height: em(49.08);
  margin-bottom: em(4);
  margin-right: em(2);
  margin-left: em(2);
  transition-duration: 1s;
}

.c-gallery__hero.-selected::after {
  content: '\e901';
  font-family: $fontfamily.icon !important;
  font-size: em(20);
  color: $theme.checked;
  text-shadow: 2px 2px 2px #000000;
  -webkit-text-stroke-width: 1px;
  -webkit-text-stroke-color: #000000;
  position: absolute;
  bottom: 0;
  right: em(2);
  width: em(23);
  transition: 0.15s;
  transition-timing-function: linear;
}

.c-gallery__hero.-excluded::after {
  content: '\e902';
  font-family: $fontfamily.icon !important;
  font-size: em(18);
  color:  $theme.excluded;
  text-shadow: 2px 2px 2px #000000;
  -webkit-text-stroke-width: 1px;
  -webkit-text-stroke-color: #000000;
  position: absolute;
  bottom: 0;
  right: em(2);
  width: em(23);
  height: em(21);
  transition: 0.15s;
  transition-timing-function: linear;
}

.c-gallery__hero.-excluded, .c-gallery__hero.-notSelected {
  .c-gallery__hero-img {
    opacity: 0.35;
  }

  .c-gallery__hero-img:hover {
    opacity: 1;
  }
}

.c-gallery__hero-img {
  position: relative;
  display: flex;
  width: em(87.5);
  height: em(49.08);
  transition 0.05s opacity linear;
}

.c-gallery__hero-img:hover {
  opacity: 0.6;
}

.c-gallery_slide-button {
  display: none;
}

@media only screen and (min-width: $media.lg) {
  .c-gallery__group-title::before {
    left: em(-45);
    height: em(30);
    width: em(30);
  }
}

@media only screen and (max-width: $media.sm) {
  .c-gallery__heroes {
    justify-content: center;
  }

  .c-gallery__group-container {
    animation-name: slideInFromRight;
    animation-duration: 0.1s;
  }
}


@media only screen and (max-width: $media.xs) {
  .c-gallery {
    display: block;
    margin-left: auto;
    margin-right: auto;
    padding-bottom: 0;
  }

  .c-gallery__hero {
    width: 100.63px;
    height: 56.44px;
  }

  .c-gallery__hero-img {
    width: 100.63px;
    height: 56.44px;
  }

  .c-gallery__group-container {
    position: relative;
    margin-left: auto;
    margin-right: auto;
  }

  .c-gallery__hero-img:hover {
    opacity: 1;
  }

  .c-gallery__group-title {
    margin-bottom: 32px;
  }

  .c-gallery__group-title::before {
    left: -60px;
    height: 50px;
    width: 50px;
  }

  .c-gallery_slide-button-container {
    position: sticky;
    top: 50%;
    z-index: 100;
    align-self: center;
  }
  
  .c-gallery_slide-button {
    display: block;
    font-size: 0;
    transform: translateY(-50%);
    background-color: rgba(0, 0, 0, 0.6);
    padding: 5px;
    border: none;
    position: absolute;
  }


  .c-gallery_slide-button::before {
    font-family: $fontfamily.icon !important;
    display: block;
    font-size: 40px;
    color: $theme.light;
  }

  .c-gallery_slide-button.-previus {
    left: 0px;
  }

  .c-gallery_slide-button.-previus::before {
    content: '\e906';
  }

  .c-gallery_slide-button.-next::before {
    content: '\e907';
  }

  .c-gallery_slide-button.-next {
    right: 0px;
  }
}
