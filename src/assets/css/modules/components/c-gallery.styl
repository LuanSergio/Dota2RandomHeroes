.c-gallery {
  display: flex;
  flex-wrap: wrap;
  align-items: flex-start;
  padding-top: 20px;
  padding-bottom: 20px;
}

.c-gallery__group {
  display: flex;
  flex-wrap: wrap;
  flex-direction: column;
  flex: 0 1 calc(32.33% - 10px);
  justify-items: space-between;
}

.c-gallery__group-title {
  position: relative;
  margin-left: auto;
  margin-right: auto;
  margin-bottom: 20px;
  color: $theme.light;
}

.c-gallery__group-title::before {
  content: '';
  display: inline-block;
  position: absolute;
  background-repeat: no-repeat;
  background-size: contain;
  transform: translateY(50%);
  bottom: 50%;
  left: -60px;
  height: 40px;
  width: 40px;
}

.c-gallery__group-title.-strength::before {
  background-image: url("../img/icons/strength2.png");
}

.c-gallery__group-title.-agility::before {
  background-image: url("../img/icons/agility2.png");
}

.c-gallery__group-title.-intelligence::before {
  background-image: url("../img/icons/intelligence2.png");
}

.c-gallery__heroes {
  display: flex;
  flex-wrap: wrap;
  align-content: flex-start;
  margin-bottom: 7px;
  margin-right: 5px;
  margin-left: 5px;
  padding-left: 2px;
  padding-right: 2px;
  min-height: 320px;
}

.c-gallery__hero {
  position: relative;
  width: 87.5px;
  height: 49.08px;
  margin-bottom: 4px;
  margin-right: 2px;
  margin-left: 2px;
}

.c-gallery__hero.-selected::after {
  content: '\e900';
  font-family: 'icomoon' !important;
  font-size: 20px;
  color: $theme.checked;
  text-shadow: 2px 2px 2px #000000;
  -webkit-text-stroke-width: 1px;
  -webkit-text-stroke-color: #000000;
  position: absolute;
  bottom: 0;
  right: 2px;
  width: 23px;
  height: 23px;
}

.c-gallery__hero.-excluded::after {
  content: '\e901';
  font-family: 'icomoon' !important;
  font-size: 18px;
  color:  $theme.excluded;
  text-shadow: 2px 2px 2px #000000;
  -webkit-text-stroke-width: 1px;
  -webkit-text-stroke-color: #000000;
  position: absolute;
  bottom: 0;
  right: 2px;
  width: 23px;
  height: 23px;
}

.c-gallery__hero.-excluded {
  .c-gallery__hero-img {
    opacity: 0.35;
  }
}

