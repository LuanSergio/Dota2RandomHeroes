.o-button {
  -webkit-text-stroke: rem(0.2);
  text-stroke: rem(0.2);
  text-shadow: rem(2) rem(2) rem(5) #000000;

  letter-spacing: rem(5);
  text-align: center;
  text-transform: uppercase;
  background-color: $theme.main;
  color: $theme.secondary;
  border: rem(1) solid $theme.side;
  border-radius: rem(3);

  -o-transition: .3s;
  -ms-transition: .3s;
  -moz-transition: .3s;
  -webkit-transition: .3s;
  transition: .3s;

  -webkit-box-shadow: rem(0) rem(3) rem(12) rem(0) rgba(0,0,0,0.75);
  -moz-box-shadow: rem(0) rem(3) rem(12) rem(0) rgba(0,0,0,0.75);
  box-shadow: rem(0) rem(3) rem(12) rem(0) rgba(0,0,0,0.75);
}

.o-button:hover {
  transition: none;
  background-color: $theme.hoverMain;
  color: $theme.hoverSecondary;
  border: rem(1) solid $theme.hoverSide;
  -o-transition: .3s;
  -ms-transition: .3s;
  -moz-transition: .3s;
  -webkit-transition: .3s;
  transition: .3s;
}
